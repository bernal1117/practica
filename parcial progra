#Ejercicio 9
b = 112
s = 75
print("*****BIENVENIDO A LA FERRETERIA*****")
barr = int(input("Ingrese la cantidad vendida de barrenos del ultimo pedido:"))
sierr = int( input("Ingrese la cantidad vendida de sierras del ultimo pedido:"))
totalb = b*barr
totals = s*sierr
totalpeso = totalb+totals
print("****************")
print("El paquete pesa",totalpeso,"kg")

#Ejercicio 10
ram = 20
ramusada = ram * 0.60
a = int(input("Cuantas rams quiere comprar:"))
b = a *ram
c = a *ramusada
d = b-c
print("El precio si descuento es de:", b)
print("El descuento aplicado sera de:, d)
print("Precio con descuento aplicado sera de: ", c)
