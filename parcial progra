#Ejercicio 3
print("A ", "\tB ", "\tQ" )
print("*******************")
print("0", "\t0", "\n0", "\t1", "\n1", "\t0", "\n1", "\t1")
z = 0
while z<4:
    z = z+1
    a = int(input("Porfavor ingrese a: "))
    b = int(input("Porfavor ingrese b: "))
    if (a == 0 and b == 0):
        print('Q = 0')
    elif (a == 0 and b == 1):
        print('Q = 1')
    elif (a == 1 and b == 0):
        print('Q = 1')
    elif (a == 1 and b == 1):
        print('Q = 1')
    
        
